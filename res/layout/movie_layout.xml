<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:src="@drawable/ic_cctv" />

    <Switch
        android:id="@+id/PIRswitch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="60dp"
        android:text="PIR Sensor"
        android:thumb="@drawable/btn"
        android:track="@drawable/custom_switch" 
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/movieBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/PIRswitch"
        android:layout_marginTop="40dp"
        android:text="@string/startMovie" />

</RelativeLayout>
